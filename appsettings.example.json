{
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_DB_SERVER;Database=SafeVault;User Id=YOUR_USER;Password=YOUR_PASSWORD;"
  },

  "AllowedOrigins": [
    "https://example.com",
    "https://app.example.com"
  ],

  "PasswordPolicy": {
    "MinLength": 10,
    "MaxLength": 128
  },

  "TokenSettings": {
    "SigningKey": "<REPLACE_WITH_A_LONG_RANDOM_SECRET>",
    "Issuer": "SafeVault",
    "Audience": "SafeVaultClients",
    "ExpiryMinutes": 60
  }
}
